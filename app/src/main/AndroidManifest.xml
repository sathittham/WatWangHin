<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sathittham.watwanghin" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- The main/home activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Calendar activity -->
        <activity
            android:name="CalendarActivity"
            android:parentActivityName="com.scuta.watwanghin.MainActivity"
            android:screenOrientation="portrait" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sathittham.sangthong.slims_master.MainActivity" />
        </activity>

        <!-- EBook activity -->
        <activity
            android:name="EbookActivity"
            android:parentActivityName="com.scuta.watwanghin.MainActivity"
            android:screenOrientation="portrait" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sathittham.sangthong.slims_master.MainActivity" />
        </activity>

        <!-- News activity -->
        <activity
            android:name="NewsActivity"
            android:parentActivityName="com.scuta.watwanghin.MainActivity"
            android:screenOrientation="portrait" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sathittham.sangthong.slims_master.MainActivity" />
        </activity>

        <!-- Sound activity -->
        <activity
            android:name="SoundActivity"
            android:parentActivityName="com.scuta.watwanghin.MainActivity"
            android:screenOrientation="portrait" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sathittham.sangthong.slims_master.MainActivity" />
        </activity>

        <!-- VDO activity -->
        <activity
            android:name="VDOActivity"
            android:parentActivityName="com.scuta.watwanghin.MainActivity"
            android:screenOrientation="portrait" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sathittham.sangthong.slims_master.MainActivity" />
        </activity>
    </application>

</manifest>
